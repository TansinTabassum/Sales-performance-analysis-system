from google.colab import files
files.upload()

import os

print("Current directory:", os.getcwd())
print("Files here:", os.listdir())
import pandas as pd
import sqlite3
import json
import matplotlib.pyplot as plt

try:
   df = pd.read_csv(
    "/content/Sample - Superstore (1).csv",
    encoding="latin1"
   )

   df.head()
except Exception as e:
  print("csv load failed: ",e)

try:
    
    df.dropna(how="all", inplace=True)

    
    df['order_date'] = pd.to_datetime(df['order_date'], errors='coerce')
    df['ship_date'] = pd.to_datetime(df['ship_date'], errors='coerce')

    
    numeric_cols = ['sales', 'quantity', 'discount', 'profit', 'revenue']
    for col in numeric_cols:
        df[col] = pd.to_numeric(df[col], errors='coerce')

    
    df.dropna(subset=['order_date', 'sales', 'quantity'], inplace=True)

    
    df = df[df['sales'] > 0]
    df = df[df['quantity'] > 0]
    df = df[df['discount'] >= 0]

    print("Data cleaned & validated successfully")
except Exception as e:
    print("Cleaning error:", e)


conn = sqlite3.connect("sales.db")
df.to_sql("sales", conn, if_exists="replace", index=False)
print("Data stored in SQLite database")


df_db = pd.read_sql("SELECT * FROM sales", conn)
df_db['order_date'] = pd.to_datetime(df_db['order_date'], errors='coerce')


monthly_performance = (
    df_db
    .groupby(df_db['order_date'].dt.to_period('M'))
    .agg({'revenue': 'sum', 'profit': 'sum'})
)


monthly_performance.index = monthly_performance.index.astype(str)


top_products = (
    df_db
    .groupby('product_name')['revenue']
    .sum()
    .sort_values(ascending=False)
    .head(5)
)


region_sales = (
    df_db
    .groupby('region')['revenue']
    .sum()
    .sort_values(ascending=False)
)


segment_profit = (
    df_db
    .groupby('segment')['profit']
    .sum()
    .sort_values(ascending=False)
)


insights = {
    "monthly_performance": monthly_performance.astype(float).to_dict(),
    "top_5_products": top_products.astype(float).to_dict(),
    "region_wise_revenue": region_sales.astype(float).to_dict(),
    "segment_wise_profit": segment_profit.astype(float).to_dict()
}

with open("insights.json", "w") as f:
    json.dump(insights, f, indent=4)

print("Insights exported to insights.json")


monthly_performance['revenue'].plot(kind='line', title="Monthly Revenue Trend")
plt.xlabel("Month")
plt.ylabel("Revenue")
plt.show()

top_products.plot(kind='bar', title="Top 5 Products by Revenue")
plt.ylabel("Revenue")
plt.show()

region_sales.plot(kind='bar', title="Region-wise Revenue")
plt.ylabel("Revenue")
plt.show()

files.download("insights.json")
files.download("sales.db")
